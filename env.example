# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@host:27017/dbname

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# S3_BUCKET: Just the bucket name, without s3:// prefix or paths
# Example: my-bucket-name (NOT s3://my-bucket-name or my-bucket-name/path)
S3_BUCKET=your-bucket-name

# File Upload Configuration
MAX_FILE_SIZE=5368709120
ALLOWED_FILE_TYPES=text/plain,application/json,text/csv

# Job Queue Configuration
JOB_BATCH_SIZE=1000
JOB_WRITE_PAUSE_MS=50
JOB_LOCK_TIMEOUT_MS=300000
JOB_STALE_THRESHOLD_MS=600000
WORKER_POLL_INTERVAL_MS=1000
MAX_JOB_ATTEMPTS=3

# Worker Configuration
WORKER_ID=worker-1
ENABLE_WORKER=true

